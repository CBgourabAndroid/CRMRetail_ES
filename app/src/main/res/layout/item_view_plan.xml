<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#80ffffff">


    <LinearLayout
        android:id="@+id/itemlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">



        <ImageView
            android:id="@+id/ivFish"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_name"
            tools:ignore="VectorDrawableCompat" />






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ASHALATA HARDWARE"
                android:id="@+id/nametxt"

                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/addressTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kasemnagar , BurdwanPIN: 713131"
                android:layout_marginLeft="10dp"
                android:textSize="13dp"
                android:textAppearance="?android:attr/textAppearanceMedium"/>


            <TextView
                android:id="@+id/numberTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9474115644"
                android:layout_marginLeft="10dp"
                android:textSize="13dp"
                android:textAppearance="?android:attr/textAppearanceMedium"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/verifiedornot"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:gravity="right"

                android:layout_marginLeft="10dp"
                />

            <ImageView
                android:id="@+id/_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:background="@drawable/ic_more_vert_black_24dp"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>





    </LinearLayout>


    <LinearLayout
        android:id="@+id/orderPaymentLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/proceedTxt"
            android:gravity="right"
            android:background="@drawable/rect_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Proceed"
            android:textSize="13dp"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:textAppearance="?android:attr/textAppearanceMedium"/>



        <LinearLayout
            android:id="@+id/orderLay"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/order"
                />

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Place Order"
                android:textSize="13dp"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        </LinearLayout>



        <LinearLayout
            android:visibility="gone"
            android:id="@+id/outstandingLay"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/outstanding"
                />

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Outstanding"
                android:textSize="13dp"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/billLay"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/bill"
                />

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Billing"
                android:textSize="13dp"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/paymentLay"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/paymenthistory"
                />

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment"
                android:textSize="13dp"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ledgerLay"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/paymenthistory"
                />

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ledger"
                android:textSize="13dp"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        </LinearLayout>












    </LinearLayout>





    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1A000000"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="67dp"/>

</LinearLayout>